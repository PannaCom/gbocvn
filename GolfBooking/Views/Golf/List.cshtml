
@model PagedList.IPagedList<GolfBooking.Models.GolfItemViewModel>
@using PagedList.Mvc; 
@{
    ViewBag.Title = "Danh sách sân golf course";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int count=0;
}
<article id="content" style="padding-top:0px;background-color:#ffffff;">
                
			  	<div class="tab-pane fade active in" id="tab1" style="height:auto;background-color:#ffffff;height: 600px;">
				<div class="list-carousel tab-item row active" style="float:left;width:100%;position: relative;display:block;background-color:#ffffff;height:500px;"> 
                                        <h6>Home » @ViewBag.header_course_list</h6>
                                        <div class="caroufredsel_wrapper" style="display: block; text-align: start; float: left; position: relative; top: auto; right: auto; bottom: auto; left: auto; z-index: auto; width: 100%; height: 500px; margin: 12px 0px; overflow: hidden;background-color:#ffffff;">
								            <ul style="text-align: left; float: left; position: absolute; top: 0px; right: auto; bottom: auto; left: 25px; margin: 0px; height: 500px; z-index: auto;background-color:#ffffff;">
                                            @foreach(var item in Model){
                                                <text>										    
                                                       <li style="margin-right:0px;width:310px;float: left;background-color:#ffffff;">
														    <a href="/golf/view/@item.id" class="span8">
															    <div class="image-container">
																    <img src="@GolfBooking.Config.domain/@item.image"alt="@item.name" style="width:290px;height:160px;border:1px solid #ff6a00;">
															    </div>
															    <div class="icon-carousel-details">
																    <h3>@item.name</h3>
																	    <div class="price-banner">
																		    <span>from</span>
                                                                            <span class="price">@if(item.priceInfo != null){ @item.priceInfo.minPrice }</span>	
                                                                            <br />																		
                                                                            @if (item.priceInfo != null && item.priceInfo.cart){
                                                                                <text>
                                                                                18h/&nbsp;<img style="width:25px" src="/Images/cart.png" alt="Alternate Text" />
                                                                                </text>
                                                                            }else{
                                                                                <text>18g+c</text>
                                                                            }
																	    </div>
															    </div>
														    </a>
													    </li>
                                                </text>
										    }
											</ul>
										    </div>	
                                            <!-- /.col-lg-12 -->
                                            <div class="col-lg-12">
                                                <ul class="pagination clearfix">
                                                        <li class="disabled"><a href="#">«</a></li>
                                                        @for (int i = 1; i <= Model.PageCount; i++)
                                                        { 
                                                             <text><li><a href="/Golf/List?name=@ViewBag.name&region=@ViewBag.region&page=@i" style="color:#808080;text-decoration:none;">@i</a></li></text>
                                                        }
                                                </ul>
                                            </div>
										  </div>
									  </div>	
                                      															      
			</article><!-- #content -->  	
