
@model PagedList.IPagedList<GolfBooking.Models.golf_package_stay>
@using PagedList.Mvc; 
@{
    ViewBag.Title = "Danh sách Golf Package và Stay and Play";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<!-- Navigation -->
        @Html.Partial("~/Views/_vMenu.cshtml")
<div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">@ViewBag.Title</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <a href="/PackageStay/Create" class="fll" style="float:right;">Thêm mới</a>                            
                            <input name="name" type="text" id="name" value="@ViewBag.name" class="form-control fll"  onkeyup="autosearch();"/> 
                            <select class="form-control fll"  id="type" name="type">
                                  <option value="1">Golf Package</option>
                                  <option value="2">Stay and Play</option>
                             </select>       
                            <script>
                                document.getElementById("type").value = "@ViewBag.type";
                            </script>                             
                            <button type="button" class="btn btn-default" onclick="search();">Tìm kiếm</button>
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <div class="dataTable_wrapper">
                                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                    <thead>
                                        <tr>
                                            <th>Tên gói dịch vụ</th>
                                            <th>Ảnh</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model){
                                            <tr class="odd gradeX">
                                                <td>@item.name</td>
                                                <td><img src="@GolfBooking.Config.domain/@item.image" height="100" width="100"></td>
                                                <td><a href="/PackageStay/Create?id=@item.id">Sửa</a>-<a href="/PackageStay/Delete/@item.id">Xóa</a></td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                            
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
                <div class="col-lg-12">
                    <ul class="pagination clearfix">
                            <li class="disabled"><a href="#">«</a></li>
                            @for (int i = 1; i <= Model.PageCount; i++)
                            { 
                                 <text><li><a href="/PackageStay/Index?name=@ViewBag.name&page=@i">@i</a></li></text>
                            }
                    </ul>
                </div>
            </div>
            
        </div>
        <!-- /#page-wrapper -->
<script>
    function search() {
        window.location.href = "/PackageStay/Index?name=" + document.getElementById("name").value + "&type=" + document.getElementById("type").value;
    }
    function autosearch() {
        var keyword = document.getElementById("name").value;
        urlSearch = '/PackageStay/autosearch?keyword=';
        $('#name').autocomplete({
            source: urlSearch + keyword,
            select: function (event, ui) {
                $(event.target).val(ui.item.value);                
                return false;
            },
            minLength: 1
        });
    }
</script>